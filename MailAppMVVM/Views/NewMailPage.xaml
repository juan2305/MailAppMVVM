<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MailAppMVVM.Views.NewMailPage" 
             xmlns:viewModel="clr-namespace:MailAppMVVM.ViewModel">
    <ContentPage.Content>

        <StackLayout>
            <Entry Placeholder="From" ></Entry>
            <Entry Placeholder="To"></Entry>
            <Entry Placeholder="Subject"></Entry>
            <Entry Placeholder="Body"></Entry>
            <Button Text="Send" Clicked="SendButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>