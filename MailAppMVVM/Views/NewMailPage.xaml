<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MailAppMVVM.Views.NewMailPage" 
             xmlns:local="clr-namespace:MailAppMVVM.ViewModel">
    <ContentPage.BindingContext>
        <local:AddNewMailViewModel/>
    </ContentPage.BindingContext>

    <StackLayout>
        <Entry Placeholder="From" Text="{Binding mailContent.FromMail}"></Entry>
        <Entry Placeholder="To" Text="{Binding mailContent.ToMail}"></Entry>
        <Entry Placeholder="Subject" Text="{Binding mailContent.SubjectMail}"></Entry>
        <Entry Placeholder="Body" Text="{Binding mailContent.BodyMail}"></Entry>
        <Button Text="Send" Clicked="SendButton_Clicked" Command="{Binding mailContent}"></Button>
    </StackLayout>
</ContentPage>