<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:MailAppMVVM.ViewModel"
    x:Class="MailAppMVVM.MainPage">
    <ContentPage.BindingContext>
        <local:NewMailPageViewModel/>
    </ContentPage.BindingContext>
<StackLayout>
        <Frame BackgroundColor="Red" Padding="4" CornerRadius="0">
            <Label Text="Cmail" HorizontalTextAlignment="Start" TextColor="White" FontSize="36"/>
        </Frame>
        <ListView ItemsSource="{Binding MailList}"></ListView>
    </StackLayout>

</ContentPage>
